<Window x:Class="KPWrestlingScoreboard.Windows.FlagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Архангельская область"
        WindowStyle="None"
        WindowState="Normal"
        WindowStartupLocation="Manual"
        Background="#0a0a0a">
    
    <Grid>
        <!-- Флаг Архангельской области из изображения -->
        <Image x:Name="flagImage"
               Stretch="Uniform" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"
               MaxWidth="1400"
               MaxHeight="900"
               Margin="50"/>
        
        <!-- Текст снизу -->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,60">
            <TextBlock Text="ФЕДЕРАЦИЯ СПОРТИВНОЙ БОРЬБЫ"
                       Foreground="#FFD700"
                       FontSize="48"
                       FontWeight="Bold"
                       FontFamily="Segoe UI"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>
            <TextBlock Text="АРХАНГЕЛЬСКАЯ ОБЛАСТЬ"
                       Foreground="White"
                       FontSize="36"
                       FontWeight="Light"
                       FontFamily="Segoe UI"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
